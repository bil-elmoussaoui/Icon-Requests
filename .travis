language: python
python:
  - "3.2"
  - "3.3"
  - "3.4"
  - "3.5"
  - "3.6"
install: 
  - "sudo apt-get -y update"
  - "sudo apt-get install -y git python-gobject"
  - "git clone https://github.com/mesonbuild/meson && && cd ./meson && python3 setup.py install"
  - "pip install requests cairosvg Pillow"
  - "git clone https://github.com/bil-elmoussaoui/Icon-Requests && cd ./Icon-Requests && mkdir build && cd ./build && ninja && sudo ninja install"
before_script:
  - "export DISPLAY=:99.0"
  - "sh -e /etc/init.d/xvfb start"
  - "sleep 3"
script: icon-requests --debug
